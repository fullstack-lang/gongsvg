{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/ng",
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/ng"
        },
        {
            "name": "Front Simple on local 4200",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "runtimeExecutable": "${env:CHROME_EXE}",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceFolder}/ng"
        },
        {
            "name": "go server colorgrid",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/go/cmd/colorgrid",
            "args": []
        },
        {
            "name": "go server colorgrid on port 8080",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/go/cmd/colorgrid",
            "args": [
                "-port=8080"
            ]
        },
        {
            "name": "go server with diagrams -unmarshallFromCode=stage.go --marshallOnCommit=stage",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/go/cmd/gongsvg",
            "args": [
                "-unmarshallFromCode=stage.go",
                "-marshallOnCommit=stage"
            ]
        },
        {
            "name": "go server -unmarshallFromCode=rectangle.go --marshallOnCommit=rectangle",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/go/cmd/gongsvg",
            "args": [
                "-unmarshallFromCode=rectangle.go",
                "-marshallOnCommit=rectangle"
            ]
        },
    ]
}