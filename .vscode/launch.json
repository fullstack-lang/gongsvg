{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/ng",
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/ng"
        },
        {
            "name": "go server colorgrid 8082",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/go/cmd/colorgrid",
            "args": []
        },
        {
            "name": "go server colorgrid on port 8080",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/go/cmd/colorgrid",
            "args": [
                "-port=8080"
            ]
        },
        {
            "name": "go server with diagrams -unmarshallFromCode=stage.go --marshallOnCommit=stage",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/go/cmd/gongsvg",
            "args": [
                "-unmarshallFromCode=stage.go",
                "-marshallOnCommit=stage"
            ]
        },
        {
            "name": "go server -unmarshallFromCode=rectangle.go --marshallOnCommit=rectangle",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/go/cmd/gongsvg",
            "args": [
                "-unmarshallFromCode=rectangle.go",
                "-marshallOnCommit=rectangle"
            ]
        },
        {
            "name": "go server -unmarshallFromCode=bezier.go --marshallOnCommit=bezier",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/go/cmd/gongsvg",
            "args": [
                "-unmarshallFromCode=bezier.go",
                "-marshallOnCommit=bezier"
            ]
        },
        {
            "name": "go server -unmarshallFromCode=simple_link.go --marshallOnCommit=simple_link",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/go/cmd/gongsvg",
            "args": [
                "-unmarshallFromCode",
                "simple_link.go",
                "-marshallOnCommit",
                "simple_link"
            ]
        },
        {
            "name": "go server -unmarshallFromCode=simple_link_2.go --marshallOnCommit=simple_link_2",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/go/cmd/gongsvg",
            "args": [
                "-unmarshallFromCode",
                "simple_link_2.go",
                "-marshallOnCommit",
                "simple_link_2"
            ]
        },
        {
            "name": "go server -benchmark 10",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/go/cmd/gongsvg",
            "args": [
                "-benchmark=10"
            ]
        },
    ]
}